#:kivy 2.0.0
#: import NoTransition kivy.uix.screenmanager.NoTransition

<ScreenManagement>:
    transition: NoTransition()
    id: main_manager

    WelcomeScreen:
        id: welcome_screen

    SignUpScreen:
        id: signup_screen

    LoginScreen:
        id: login_screen

    MenuScreen:
        id: menulist

    Dashboard:
        id: dashboard

    Profile:
        id: manage_profile



<MainToolbar>:
    title: "Online Dental :: Appointments"
    left_action_items: [["menu", lambda x: self.show_menu(), "This is the navigation"]]
    right_action_items: [["dots-vertical", "this is the More Actions"]]


<MenuButton@Button>:
    size_hint: (1, 1)
    bg_color: (1,1,1,1)


<MenuItem@MDBoxLayout>:
    orientation: "vertical"
    padding: "10dp"
    spacing: "10dp"
    size_hint: None, None
    size_hint: (1, 1)
    md_bg_color: (1,1,1,1)


<MenuBox@MDBoxLayout>:
    orientation: "vertical"
    size_hint: None, None
    size_hint: (1, 1)
    md_bg_color: (1,1,1,1)



<MenuImage@Image>:
    allow_stretch: True
    size_hint: None, None
    size_hint_x: 0.7
    size_hint_y: 0.7
    pos_hint: {"center_x": 0.5, "center_y":0.5}




<MenuScreen>:
    id: menulist
    name: "menulist"

    MDBoxLayout:
        orientation: "vertical"

        MainToolbar:

        ScrollView:
            do_scroll_x: False
            do_scroll_y: True


            GridLayout:
                size_hint_y: None
                cols: 3
                row_force_default: True
                row_default_height: 320
                minimum_height: self.height

                MenuButton:
                    on_press: root.manager.current = "manage_profile"
                    GridLayout:
                        cols: 1
                        row_default_height: self.parent.height
                        width: self.parent.width

                        MenuItem:
                            MenuBox:
                                MDBoxLayout:
                                    size_hint: None, None
                                    size_hint: (0.5, 0.5)
                                    pos_hint: None, None
                                    pos_hint:{"center_x":0.5, "center_y":0.5}

                                    MenuImage:
                                        source: "icons/iuser.png"
                            MDLabel:
                                text: "Profile"
                                halign: "center"
                                md_bg_color: (1,1,1,1)
                                size_hint: None, None
                                size_hint_y: .2
                                size_hint_x: 1

                MenuItem:
                    MenuBox:
                        MenuImage:
                            source: "icons/idashboard.png"
                        MDLabel:
                            text: "Dashboard"
                            halign: "center"

                MenuItem:

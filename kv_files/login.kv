#:kivy 2.0.0

<LoginScreen>:
    name: "login"
    id: login_screen

    MDBoxLayout:
        orientation: "vertical"
        md_bg_color: (1, 1, 1, 1)


        MDLabel:
            size_hint_y: None
            size: self.parent.size[0], 100

        MDLabel:
            text: "Online Dental"
            theme_text_color: "Custom"
            text_color: 5, 147, 235, 1
            halign: "center"
            pos_hint: {"center_x": 0.5, "top":0.6}
            size_hint_y: None
            size: self.parent.size[0], 100
            font_style: "H3"

        MDLabel:
            text: "Appointments"
            theme_text_color: "Custom"
            text_color: 5, 147, 235, 1
            halign: "center"
            pos_hint: {"center_y": 0, "top":0.5}
            size_hint_y: None
            size: self.parent.size[0], 60
            font_style: "H5"

        Image:
            size_hint_y: None
            source: 'icons/odc.png'
            size: self.parent.size[0] - 40, (self.parent.size[1]/2) - 100
            allow_stretch: True


        MDLabel:
            text: "Login"
            adaptive_height: True
            halign: "center"
            theme_text_color: "Custom"
            text_color: 5, 147, 235, 1
            font_style: "H5"
            halign: "center"

        MDTextField:
            id: username
            required: True
            multiline: False
            hint_text: "Username"
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            size_hint_x: 0.5
            mode: "rectangle"
            helper_text_mode: "on_error"
            helper_text: "Enter Username"

        MDTextField:
            id: passwd
            required: True
            multiline: False
            hint_text: "Password"
            pos_hint: {"center_x": 0.5, "center_y":0.5}
            size_hint_x: 0.5
            password: True
            mode: "rectangle"
            helper_text_mode: "on_error"
            helper_text: "Enter Pssword"

        MDLabel:
            size_hint_y: None
            size: self.parent.size[0], 60


        GridLayout:
            cols: 2
            rows: 1

            MDBoxLayout:
                AnchorLayout:
                    anchor_x: 'right'
                    padding: ["10dp", "5dp"]

                    MDRaisedButton:
                        id: "login_submit"
                        text: "Submit"
                        md_bg_color: 43/255.0, 194/255.0, 153/255.0, 1
                        pos_hint: {"center_x": 0.5}
                        elevation: 20
                        on_press: root.check_login()

            MDBoxLayout:
                AnchorLayout:
                    anchor_x: 'left'
                    padding: ["10dp", "5dp"]

                    MDRaisedButton:
                        text: "Cancel"
                        md_bg_color: 252/255.0, 175/255.0, 8/255.0, 1
                        pos_hint: {"center_x": 0.5}
                        elevation: 20
                        on_press: root.manager.current = "welcome_screen"

        Widget:

<CredententialsErrorSnackbar>

    MDBoxLayout:
        orientation: "vertical"

        MDLabel:
            size_hint_y: None
            height: 100
            text: "Oops!"
            font_size: root.font_size
            theme_text_color: 'Custom'
            text_color: get_color_from_hex('ffffff')
            shorten: True
            shorten_from: 'right'
            halign: "center"
            font_style: "H4"

        MDLabel:
            size_hint_y: None
            height: 100
            text: "Still not correct, give it another try"
            font_size: root.font_size
            theme_text_color: 'Custom'
            text_color: get_color_from_hex('000000')
            shorten: True
            shorten_from: 'right'
            halign: "center"
            md_bg_color: (1, 1, 1, 1)
            font_style: "H5"

        MDLabel:
            size_hint_y: None
            height: 100
            text: "Enter the correct username and password to sign in."
            font_size: root.font_size
            theme_text_color: 'Custom'
            text_color: get_color_from_hex('ffffff')
            shorten: True
            shorten_from: 'right'
            halign: "center"
            font_style: "Subtitle1"


<ProfileDetails@MDCard>:
    elevation: 0
    padding: [0, 20, 0, 0]
    background_color: 1,0,0,1


<TabButton@Button>:
    size_hint: None, None
    size_hint_x: 1
    height: 80
    background_normal: ''

<TitleLabel@MDLabel>:
    color: "black"
    size_hint: None, None
    size: 300, 80
    position_hint: {"x":.2}
    halign: "left"
    valign: "top"
    padding: [20, 20]
    bold: True

<DataLabel@MDLabel>:
    color: "black"
    size_hint: None, None
    size: self.parent.size[0]-290, 80
    position_hint: {"x":.1}
    halign: "left"
    valign: "top"
    padding: [10, 10]